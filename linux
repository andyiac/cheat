for my own script 

	#!/bin/bash
	#config screen light!
	XBACKLIGHT_CFG="${HOME}/.xbacklight.conf"
	if [[ $# -eq 0 ]]; then
   	   	xbacklight -set $(sed -n '1p' ${XBACKLIGHT_CFG})
	else
   	   	xbacklight $1 $2 
   		xbacklight > ${XBACKLIGHT_CFG}
	fi

then use :
xlight -20
xlight +20

